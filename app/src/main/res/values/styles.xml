<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Title">
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/text_horizontal_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Description">
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/text_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/text_horizontal_padding</item>
    </style>
</resources>
